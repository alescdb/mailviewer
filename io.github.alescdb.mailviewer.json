{
  "id": "io.github.alescdb.mailviewer",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "mailviewer",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=xdg-run/mailviewer:create"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/mailviewer/cargo"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
        {    
      "name": "gmime",    
      "sources": [    
        {    
          "type": "archive",    
          "url": "https://github.com/jstedfast/gmime/releases/download/3.2.15/gmime-3.2.15.tar.xz",    
          "sha256": "84cd2a481a27970ec39b5c95f72db026722904a2ccf3fdbd57b280cf2d02b5c4"    
        }    
      ]    
    },    
    {
      "name": "mailviewer",
      "builddir": true,
      "buildsystem": "meson",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/mailviewer/cargo",
          "OFFLINE_BUILD": "1"
        }
      },
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        "mailviewer-sources.json",
        {
          "type": "dir",
          "path": "./"
        }
      ]
    }
  ]
}